<%= form_for @sampleform do |f| %>

<p>
<%= f.label :firstname%>
<%= f.text_field :firstname %>
</p>

<p>
<%= f.label :lastname %>
<%= f.text_field :lastname %>
</p>

<p>
<%= f.label :gender %>
<%= f.radio_button :gender, 'Male', :checked =>true %> Male
<%= f.radio_button :gender, 'Female' %> Female
</p>

<p>
<%= f.label :age %>
<%= f.text_field :lastname %>
</p>

<%= f.submit "Submit" %>
<% end %>
